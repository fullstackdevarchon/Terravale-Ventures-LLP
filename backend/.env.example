# =========================================
# üîí TERRAVALE BACKEND ENVIRONMENT VARIABLES
# =========================================

# Server Configuration
NODE_ENV=development
PORT=5000

# =========================================
# üóÑÔ∏è DATABASE
# =========================================
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/terravale?retryWrites=true&w=majority

# =========================================
# üîê AUTHENTICATION
# =========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# =========================================
# üåê CORS - FRONTEND URLS
# =========================================

# Production Frontend URLs (REQUIRED for production)
FRONTEND_URL=https://terravale-main.onrender.com
ADMIN_URL=https://terravale-admin.onrender.com
LABOUR_URL=https://terravale-labour.onrender.com

# Development Frontend URLs (optional, defaults to localhost)
DEV_FRONTEND_URL=http://localhost:5173
DEV_ADMIN_URL=http://localhost:5175
DEV_LABOUR_URL=http://localhost:5174

# =========================================
# üìß EMAIL CONFIGURATION (for password reset)
# =========================================
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# =========================================
# üîî WEB PUSH NOTIFICATIONS (VAPID Keys)
# =========================================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# =========================================
# üîë GOOGLE OAUTH (optional)
# =========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =========================================
# üìù NOTES
# =========================================
# 1. Copy this file to .env and fill in your actual values
# 2. NEVER commit .env to version control
# 3. Use strong, unique values for JWT_SECRET
# 4. Ensure all production URLs use HTTPS
# 5. Remove trailing slashes from URLs
